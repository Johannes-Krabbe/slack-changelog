{
  "name": "slack-changelog",
  "version": "1.0.0",
  "description": "GitHub Action to send changelog notifications to Slack",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "package": "bun build src/index.ts --compile --outfile dist/index",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "local": "bun run src/local.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest"
  }
}
